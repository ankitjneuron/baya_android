<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"

    >
    <RelativeLayout
        android:id="@+id/front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="front">

        <RelativeLayout
            android:id="@+id/bussiness_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bussiness_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="Elite Dental Care"
                android:textColor="#0EA1D4"
                android:layout_marginLeft="6dp"
                />

            <RelativeLayout
                android:id="@+id/status_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/getcurvev"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                >

                <TextView
                    android:id="@+id/status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/pending"
                    android:singleLine="true"
                    android:text="PENDING"
                    android:textSize="13sp"
                    android:drawablePadding="5dp"
                    android:padding="5dp"

                    />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/name_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bussiness_name_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/about_doctor"
                android:drawablePadding="5dp"
                android:paddingLeft="8dp"
                android:text="Renzi mark DMD "
                android:singleLine="true"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pending"
                android:drawablePadding="5dp"
                android:paddingLeft="8dp"
                android:text="04:00"
                android:singleLine="true"


                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/back_alert_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="right|center"
        android:orientation="horizontal"
        android:tag="back" >

        <LinearLayout
            android:id="@+id/workthislayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/dark_gray"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageButton
                android:id="@+id/workthisjobintrested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/reschedule"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/workthisjobintrested"
                android:layout_gravity="center"

                android:gravity="center"
                android:paddingTop="5dp"
                android:text="Reschedule"
                android:textColor="#ffffff"
                android:textSize="10dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/notinterestedlayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageButton
                android:id="@+id/not_intrestedBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/cancel"
                android:textColor="@color/button_txt_color1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/not_intrestedBtn"
                android:layout_gravity="center"

                android:gravity="center"
                android:paddingTop="5dp"
                android:text="Cancel"
                android:textColor="#ffffff"
                android:textSize="10dp" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
