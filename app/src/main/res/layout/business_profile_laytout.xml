<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">




    <RelativeLayout
        android:id="@+id/business_profile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_bar"
        android:orientation="horizontal"
        >

        <RelativeLayout android:id="@+id/r_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13sp" android:layout_marginRight="2dp"
            android:orientation="vertical"  android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/business_profile_doctor_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="10dp"
                android:src="@drawable/xdefault" android:layout_centerVertical="true" android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_toRightOf="@+id/r_layout"
            >
            <TextView
                android:id="@+id/business_profile_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Renzi Mark DMD"
                android:textColor="#189ED8"
             />

            <TextView
                android:id="@+id/business_profile_doctor_speciality_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/business_profile_doctor_name"
                android:drawableLeft="@drawable/specialty"
                android:drawablePadding="2dp"
                android:text="General Dentist,Cosmetic Dentist" android:singleLine="true"
                android:textSize="13sp" android:padding="2dp"
                />

            <TextView
                android:id="@+id/business_profile_doctor_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/business_profile_doctor_speciality_txt"
                android:text="General Dentist and Cosmetic Dentist General Dentist and Cosmetic Dentist"
                android:textSize="13sp" android:padding="2dp"
                android:maxLines="3"
                android:layout_marginRight="13sp"/>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
