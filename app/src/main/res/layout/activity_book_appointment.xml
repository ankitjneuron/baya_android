<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="baya.com.user.demopageindicator.BookAppointment">

     <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#199AD9">

        <ImageView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
             android:src="@drawable/back"
              />
         <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="Book Appointment"
            android:textColor="#FDFEFF"
            android:textSize="15dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/bussinessname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:padding="10dp"
        android:text="Elite Dental Care"
        android:textColor="#383838"
        android:textSize="15dp"
         android:background="@drawable/rectangle_layout"
        />
<!--
    android:background="#F0F0F0"
-->

    <LinearLayout
        android:id="@+id/dateandtimelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bussinessname"
        android:background="#F0F0F0"
        android:orientation="horizontal"
        android:weightSum="10"
         >
         <LinearLayout
            android:id="@+id/datelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
             android:background="@drawable/rectangle_layout"
             >

            <TextView
                android:id="@+id/datetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/date"
                android:gravity="center"
                android:text="4656"
                android:padding="10dp"
                android:drawablePadding="10dp"
                 android:textColor="#7E7E7E"
                android:textSize="15dp" />
        </LinearLayout>
         <LinearLayout
            android:id="@+id/timelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
              android:background="@drawable/rectangle_layout"
             >

            <TextView
                android:id="@+id/timetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/hours"
                android:gravity="center"
                android:text="4656"
                android:drawablePadding="10dp"
                android:textColor="#7E7E7E"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ttttext"
    android:padding="10dp"
    android:layout_below="@+id/dateandtimelayout"
    android:background="#FFFFFF"
    >
    <LinearLayout
        android:id="@+id/specificdoctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/specificdoctortxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/specific_doctor01"
            android:drawablePadding="10dp"
            android:gravity="center"
             android:paddingLeft="5dp"
            android:text="Specific Doctor :"
            android:textColor="#279FDA"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/specificdoctorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/specificdoctortxt"
            android:layout_toRightOf="@+id/specificdoctortxt"
            android:text="Theodos Louis V DMD"
            android:textColor="#7E7E7E"
            android:textSize="15dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/reasonlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/specificdoctor"
        android:background="#FFFFFF"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/reasontxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/date"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:drawablePadding="10dp"
            android:text="Reason :"
            android:textColor="#279FDA"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/specificdoctortxt"
            android:layout_toRightOf="@+id/specificdoctortxt"
            android:gravity="center"
            android:text="Daily CheckUp"
            android:textColor="#7E7E7E"
            android:textSize="15dp" />
    </LinearLayout>
</RelativeLayout>
    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ttttext"
        android:background="#EFEFEF" />

    <TextView
        android:id="@+id/patientinformationtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v"
        android:background="#FFFFFF"
        android:padding="10dp"
         android:text="Patient Information"
        android:textColor="#279FDA"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/patientinformationtext"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
         >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username1"
            android:hint="John"
            android:background="@drawable/rectangle"
            android:padding="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lastname1"
            android:hint="Deo"
            android:background="@drawable/rectangle"
            android:padding="10dp"
            />
        <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailid1"
            android:hint="john@doe.com"
            android:background="@drawable/rectangle"
            android:padding="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contactno1"
            android:hint="808551101"
            android:background="@drawable/rectangle"
            android:padding="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Gender"
            android:hint="Male"
            android:background="@drawable/rectangle"
            android:padding="10dp"
            />
          <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Gender"
            android:hint="Male"
            android:background="@drawable/rectangle"
            android:padding="10dp"
            />


        </LinearLayout>


    <RelativeLayout
        android:id="@+id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#199AD9"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Submit"
            android:textColor="#D4EBF8" />
    </RelativeLayout>


    <DatePicker
        android:id="@+id/datepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"></DatePicker>

    <TimePicker
        android:id="@+id/timepiker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </TimePicker>
</RelativeLayout>
