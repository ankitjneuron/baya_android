<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baya.ChangePassword">

    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/blue_gradients">

        <ImageButton
            android:id="@+id/back_buisnessp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="13sp"
            android:background="#00000000"
            android:src="@drawable/back"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/textview_buisnessp_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="Change Password"
            android:textColor="#FDFEFF"
            android:textSize="15dp" />
    </RelativeLayout>
     <LinearLayout
        android:id="@+id/change_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_bar"
        android:background="#F0F0F0"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:orientation="vertical"
            android:paddingLeft="13sp"
             android:paddingTop="13sp"
            android:paddingRight="2sp">
             <ImageView
                android:id="@+id/imageview_buisnesslistings_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="13sp"
                android:src="@drawable/change_password" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/r_vi"
            android:padding="13sp"
            >
            <TextView
                android:id="@+id/textview_change_password_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Change Your Password "
                android:textColor="#4D4D4D"
                android:layout_toLeftOf="@+id/rlayout"
                android:layout_alignParentLeft="true"
                android:textSize="18dp"
                android:singleLine="true"
                  />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_content"
                android:text=" Please ensure your new\n password is at least 6 characters"
                android:textColor="#B5B5B5"
                android:layout_below="@+id/textview_change_password_content"

                android:textSize="13sp"
                />
          </RelativeLayout>
     </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/change_password_layout"
        android:background="#FFFFFF"


        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/old_password_edt"
            android:background="@drawable/rectangle"
            android:hint=" Old Password"
            android:drawableLeft="@drawable/lockchanges"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:textSize="13sp"
            android:layout_marginLeft="13sp"
            android:layout_marginRight="13sp"
            android:layout_marginTop="13sp" android:inputType="textPassword" android:textColorHint="#aaaaaa"
             />
        <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:id="@+id/v"
        android:background="#FFFFFF"
        android:layout_below="@+id/old_password_edt"
        >
    </View>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_password"
            android:background="@drawable/rectangle"
            android:hint=" New Password"
            android:layout_below="@+id/v"
            android:drawableLeft="@drawable/lockchanges"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:textSize="13sp"
            android:layout_marginLeft="13sp"
            android:layout_marginRight="13sp" android:inputType="textPassword"
            android:textColorHint="#aaaaaa"
             />


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:id="@+id/v2"
            android:background="#FFFFFF"
            android:layout_below="@+id/new_password"
            >
        </View>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_password"
            android:background="@drawable/rectangle"
            android:hint=" Confirm New Password"
            android:layout_below="@+id/v2"
            android:drawableLeft="@drawable/lockchanges"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:textSize="13sp"
            android:layout_marginLeft="13sp"
            android:layout_marginRight="13sp" android:inputType="textPassword"
            android:textColorHint="#aaaaaa"
             />



        </RelativeLayout>









        <TextView
            android:id="@+id/change_password_save_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"

            android:background="#199AD9"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Save"
            android:textColor="#D4EBF8" />





</RelativeLayout>
