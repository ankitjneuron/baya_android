<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.baya.Profile">

    <FrameLayout
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/profile_suceess">

        <ImageButton
            android:id="@+id/back_buisnessp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#189DD9"
            android:padding="13sp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/textview_buisnessp_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal|top"
            android:padding="10dp"
            android:text="Profile"
            android:textSize="20sp"
            android:textColor="#FDFEFF" />

        <ImageView
            android:id="@+id/edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:padding="10dp"
            android:src="@drawable/edits" />

    </FrameLayout>


    <RelativeLayout
        android:id="@+id/profile_user_information_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_bar"
        android:layout_above="@+id/update_profile"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/profile_usert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/r_layout_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13sp"
                    android:background="#FFFFFF"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/profile_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rectangle_edittext"
                        android:drawableLeft="@drawable/user"
                        android:drawablePadding="5dp"
                        android:text="First Name"
                        android:padding="13sp"
                        android:layout_weight="0.5"/>

                    <EditText
                        android:id="@+id/profile_user_name_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:background="@drawable/rectangle_edittext"
                        android:hint="First name"
                        android:inputType="textCapSentences"
                        android:layout_weight="0.5"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:padding="5dp" />
                </LinearLayout>

                <View
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/r_layout_name"
                    android:background="#cdcdcd"></View>

                <LinearLayout
                    android:id="@+id/r_layoutname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v1"
                    android:background="#FFFFFF"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/profile_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/user"
                        android:drawablePadding="5dp"
                        android:text="Last Name"
                        android:layout_weight="0.5"
                        android:padding="13sp" />

                    <EditText
                        android:id="@+id/profile_last_name_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:inputType="textCapSentences"
                        android:background="@drawable/rectangle_edittext"
                        android:hint="Last name"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:padding="5dp" />
                </LinearLayout>


                <View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/r_layoutname"
                    android:background="#cdcdcd"></View>

                <LinearLayout
                    android:id="@+id/r_layoutemails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v2"
                    android:background="#FFFFFF"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/profile_email_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rectangle_edittext"
                        android:drawableLeft="@drawable/email"
                        android:drawablePadding="5dp"
                        android:layout_weight="0.5"
                        android:text="Email Address"
                        android:padding="13sp" />

                    <EditText
                        android:id="@+id/profile_email_address_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:singleLine="true"
                        android:layout_weight="0.5"
                        android:textSize="16sp"
                        android:background="@drawable/rectangle_edittext"
                        android:hint="Email address"
                        android:padding="5dp" />
                </LinearLayout>


                <View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/r_layoutemails"
                    android:background="#cdcdcd"></View>

                <LinearLayout
                    android:id="@+id/r_layoutphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v3"
                    android:background="#FFFFFF"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/profile_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rectangle_edittext"
                        android:drawableLeft="@drawable/phone"
                        android:drawablePadding="5dp"
                        android:layout_weight="0.5"
                        android:text="Phone Number"
                        android:paddingLeft="13dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="13dp"
                        android:paddingTop="13dp"/>

                    <EditText
                        android:id="@+id/profile_phone_number_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:layout_weight="0.5"
                        android:background="@drawable/rectangle_edittext"
                        android:hint="Enter Phone number"
                        android:maxLength="10"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:inputType="number"
                        android:padding="5dp" />
                </LinearLayout>

                <View
                    android:id="@+id/viewlayout"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/r_layoutphone"
                    android:background="#cdcdcd"></View>

                <RelativeLayout
                    android:id="@+id/r_layout_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewlayout"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/profile_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/gender"
                        android:drawablePadding="5dp"
                        android:padding="10sp"
                        android:hint="Gender"
                        android:text="Gender" />

                    <com.baya.switchbutton.SwitchButton
                        android:id="@+id/gender_switch"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        app:animationVelocity="8"
                        app:measureFactor="1.5"
                        app:offDrawable="@drawable/male_icon"
                        app:onColor="#8995B7"
                        app:onDrawable="@drawable/female_icon" />

                </RelativeLayout>


                <View
                    android:id="@+id/view_layout"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/r_layout_gender"
                    android:background="#cdcdcd"></View>

                <RelativeLayout
                    android:id="@+id/r_layoutbirths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_layout"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/profile_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/barthday"
                        android:drawablePadding="5dp"
                        android:padding="13sp"
                        android:text="Birthday" />

                    <TextView
                        android:id="@+id/profile_birth_day_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:text="Select Birthdate"
                        android:textSize="13sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/change_password_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/r_layoutbirths"
                    android:layout_centerVertical="true"
                    android:padding="20dp"
                    android:text="Change Password"
                    android:textColor="#5AB6E3"
                    android:textSize="18sp"

                    />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>


    <ImageView
        android:id="@+id/profile_user_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/profile_user_information_layout"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_profile"
        android:scaleType="fitXY"
        />

    <ImageButton
        android:id="@+id/edit_buisnessp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profile_user_image"
        android:layout_alignEnd="@+id/profile_user_image"
        android:layout_alignRight="@+id/profile_user_image"
        android:background="@drawable/profileedit"
        android:padding="13sp" />

    <RelativeLayout
        android:id="@+id/update_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#199AD9"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/change_password_save_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Update Profile"
            android:textColor="#D4EBF8" />
    </RelativeLayout>


</RelativeLayout>


