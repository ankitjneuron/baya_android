<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="horizontal"
    android:padding="0dp"
    android:weightSum="10">

    <RelativeLayout
        android:id="@+id/doctorlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:layout_marginTop="5dp"
        android:layout_weight="7">

        <TextView
            android:id="@+id/nameOfClinic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_toLeftOf="@+id/slayout"
            android:gravity="bottom" android:paddingLeft="13sp"

            android:text="Megibow Faimly Dental"
            android:textColor="#26A9D6"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameOfClinic"
            android:orientation="horizontal" android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:src="@drawable/about" android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/nameOfDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="bottom"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="Renzi Mark DMD"
                android:textColor="#696969"
                android:textSize="15sp" android:layout_marginLeft="5dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"

                android:src="@drawable/pending" android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/timeOfAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"

                android:text="00:00PM"
                android:textColor="#696969"
                android:textSize="15sp" android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/slayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/nameOfClinic"
            android:layout_marginRight="-12sp"
            android:background="@drawable/rounded_corner"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgaeViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:padding="3dp"
                android:src="@drawable/pending" />

            <TextView
                android:id="@+id/statusOfAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="bottom"
                android:text="Status"
                android:textColor="#aaaaaa"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

    <!--<LinearLayout android:id="@+id/vie"-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="wrap_content"-->

    <!--android:layout_toRightOf="@+id/doctorlayout"-->
    <!--android:layout_weight="3"-->
    <!--android:orientation="vertical">-->

    <!--</LinearLayout>-->


</RelativeLayout>