<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bussiness_name_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="Stony hill Dental Care"
            android:textColor="#2BABD7"
            android:paddingLeft="10dp"
            android:id="@+id/business_name_txt"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/visited_or_missed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableRight="@drawable/missed"
            android:text="Visited"

            android:textColor="#2BABD7" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/timeanddate_ttxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bussiness_name_history"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Renzy Mark DMD"
            android:drawableLeft="@drawable/about"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:id="@+id/business2_name_txt"

            />

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:drawableLeft="@drawable/pending"
            android:text="04:00 pm"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"

            />
    </LinearLayout>


</RelativeLayout>
