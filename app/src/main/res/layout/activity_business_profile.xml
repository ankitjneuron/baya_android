<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="baya.com.user.demopageindicator.BusinessProfile">


    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/blue_gradients">

        <ImageButton
            android:id="@+id/back_buisnessp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:padding="13sp"
            android:src="@drawable/back"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/textview_buisnessp_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="Business Profile"
            android:textColor="#FDFEFF"
            android:textSize="15dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/business_profile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_bar"
        android:background="@drawable/blue_gradients"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:paddingBottom="13sp"
            android:paddingLeft="13sp"
            android:paddingRight="2sp"
            android:paddingTop="13sp">

            <ImageView
                android:id="@+id/imageview_buisnesslistings_images"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="13sp"
                android:src="@drawable/xdefault" />

            <TextView
                android:id="@+id/booking_buisnessprofiles_txt_booknow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageview_buisnesslistings_images"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13sp"
                android:background="#FFFFFF"
                android:paddingBottom="4dp"
                android:paddingLeft="13sp"
                android:paddingRight="13sp"
                android:paddingTop="4dp"
                android:text="Book Now"
                android:textColor="#000000"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r_vi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13sp"
            android:gravity="right"

            android:paddingBottom="13sp"
            android:paddingTop="13sp">

            <TextView
                android:id="@+id/textview_buisness_doctornam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/getdirection"
                android:padding="3dp"
                android:singleLine="true"
                android:text="Elite Dental Care"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textview_bussiness_phonen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_buisness_doctornam"
                android:drawableLeft="@drawable/phoneq"
                android:drawablePadding="2dp"
                android:padding="1dp"
                android:text="8085511001"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textview_buisness_specials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_bussiness_phonen"
                android:drawableLeft="@drawable/specialty_logo"
                android:drawablePadding="2dp"
                android:padding="1dp"
                android:singleLine="true"
                android:text="General Dentist and Cosmetic Dentist"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textview_buisness_addresstext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_buisness_specials"
                android:drawableLeft="@drawable/address_logo"
                android:drawablePadding="2dp"
                android:maxLines="2"
                android:text="San Fransisco ,CA 94133"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <RelativeLayout
                android:id="@+id/getdirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="-13sp"
                android:background="@drawable/getcurvev">

                <TextView
                    android:id="@+id/textview_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="13sp"
                    android:paddingRight="13sp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="Get Directions"
                    android:textColor="#222222"
                    android:textSize="13sp" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/business_profile_profile_n_hour_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/business_profile_info"
        android:orientation="horizontal"
        android:weightSum="10">

        <RelativeLayout
            android:id="@+id/business_profile_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:width="5dp">

            <TextView
                android:id="@+id/business_profile_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:gravity="center"
                android:padding="13sp"
                android:text="Profile"
                android:textColor="#199AD9"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/business_hour_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:width="5dp"
            android:background="#333333">

            <TextView
                android:id="@+id/business_hour_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:gravity="center"
                android:padding="13sp"
                android:text="Business Hours"
                android:textColor="#D4EBF8"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>


    <!--
        Bussiness hours
    -->
    <ScrollView
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_below="@+id/business_profile_profile_n_hour_txt">


        <RelativeLayout
            android:id="@+id/business_profile_doctor_business_hour_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/profile_business_hour_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_business_hour_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/hours"
                    android:drawablePadding="5dp"
                    android:padding="9dp"
                    android:paddingLeft="10dp"
                    android:text="Business Hours"
                    android:textColor="#484848" />

                <TextView
                    android:id="@+id/business_profile_ttxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_business_hour_txt"
                    android:layout_marginLeft="13sp"
                    android:paddingBottom="13sp"
                    android:paddingLeft="10dp"
                    android:text="Please request an appointment during our Hour of operation"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:id="@+id/v3"
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:layout_below="@+id/profile_business_hour_txt"
                android:background="#cdcdcd"></View>

            <RelativeLayout
                android:id="@+id/business_profile_hour_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/v3">

                <ListView
                    android:id="@+id/hours_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/buisness_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:inputType="textCapCharacters"
                    android:text="No Slots" android:padding="13sp"
                    android:textSize="13sp"
                    android:textStyle="bold" android:visibility="gone"></TextView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


    <!--
    business profile of doctor-->
    <ScrollView
        android:id="@+id/scroll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_below="@+id/business_profile_profile_n_hour_txt">

        <RelativeLayout
            android:id="@+id/business_profile_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/business_profile_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/business_about_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/about"
                    android:drawablePadding="5dp"
                    android:padding="13sp"
                    android:text="About"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/business_profile_about_description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/business_profile_about"
                android:visibility="gone">

                <TextView
                    android:id="@+id/about_description_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="13sp"
                    android:paddingBottom="13sp"
                    android:paddingLeft="13sp"
                    android:text="This is a text View. This is a textview. This is a Textview. "
                    android:textSize="13sp" />


            </RelativeLayout>

            <View
                android:id="@+id/v"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/business_profile_about_description_layout"
                android:background="#cdcdcd" />


            <RelativeLayout
                android:id="@+id/business_profile_our_doctor_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v">

                <TextView
                    android:id="@+id/business_our"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ourdoctors"
                    android:drawablePadding="5dp"
                    android:padding="13sp"
                    android:text="Our Doctors"
                    android:textColor="#222222" />
            </RelativeLayout>

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/business_profile_our_doctor_layout"
                android:background="#cdcdcd" />

            <RelativeLayout
                android:id="@+id/business_profile_doctor_list_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/v2">

                <ListView
                    android:id="@+id/business_profile_doctor_list"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"  ></ListView>

                <TextView
                    android:id="@+id/buisness_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:inputType="textCapCharacters"
                    android:text="No Slots" android:padding="13sp"
                    android:textSize="13sp"
                    android:textStyle="bold" android:visibility="gone"></TextView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
