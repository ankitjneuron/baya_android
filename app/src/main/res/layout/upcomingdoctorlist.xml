<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="horizontal"
    android:paddingBottom="13sp"
    android:paddingLeft="13sp"
    android:paddingTop="13sp"
    android:weightSum="10">

    <RelativeLayout
        android:id="@+id/doctorlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:padding="1dp">

        <TextView
            android:id="@+id/nameOfClinic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/slayout"
            android:gravity="bottom"
            android:paddingBottom="5sp"
            android:paddingLeft="5sp"
            android:text="Megibow Faimly Dental"
            android:textColor="#26A9D6"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameOfClinic"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:padding="1dp"
                android:src="@drawable/about" />

            <TextView
                android:id="@+id/nameOfDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:gravity="bottom"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="Renzi Mark DMD"
                android:textColor="#696969"
              />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:layout_marginLeft="5dp"
                android:padding="1dp"
                android:src="@drawable/pending" />

            <TextView
                android:id="@+id/timeOfAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"

                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="00:00PM"
                android:textColor="#696969"
              />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/slayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/nameOfClinic"
            android:layout_marginRight="-1sp"
            android:layout_marginTop="2sp"
            android:background="@drawable/getcurvev"
            android:orientation="horizontal"
            android:padding="5sp">

            <ImageView
                android:id="@+id/imgaeViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:padding="3dp"
                android:src="@drawable/visited" />

            <TextView
                android:id="@+id/statusOfAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:gravity="center_vertical"
                android:text="Status"
                android:textColor="#aaaaaa"
               />
        </LinearLayout>
    </RelativeLayout>

    <!--<LinearLayout android:id="@+id/vie"-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="wrap_content"-->

    <!--android:layout_toRightOf="@+id/doctorlayout"-->
    <!--android:layout_weight="3"-->
    <!--android:orientation="vertical">-->

    <!--</LinearLayout>-->


</RelativeLayout>